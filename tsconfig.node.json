{
	"compilerOptions": {
		"composite": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@stores/*": ["src/stores/*"]
		}
	},
	"include": [
		"vite.config.ts",
		"package.json",
		"test/**/*.d.ts",
		"test/util/**/*.ts",
		"test/**/*.test.ts",
		"src/**/*.ts"
	]
}
